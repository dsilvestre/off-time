</div>

<div class="container">

    <div class="content-left col-md-8 col-xs-12">

    </div>

      <div class="content-right col-md-4 hidden-sm">

    </div>
</div>

<div id="map" style="width: 40%; height: 200px"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

  <!-- Include Google Maps JS library. You should use your *own* key -->
  <script src="https://maps.google.com/maps/api/js?key=AIzaSyBH0l9hg8U4fOmacG2hemm0CiQ3gj25UZA"></script>

  <!-- Include Dependencies of GMaps for Rails gem -->
