<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= equipment_image_path(equipment)%>');">
  <div class="card-category"></div>
  <div class="card-description">
    <h2><%= equipment.name %></h2>
    <p><%= link_to 'Show', equipment %>
      <%= link_to 'Edit', edit_equipment_path(equipment) %>
      <%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
