<%= simple_form_for [equipment, booking] do |f| %>
<%= f.error_notification %>
    <div class="form-inputs text-center">

      <%= f.input :start_date, :label => "Start Date", :placeholder => "Choose Start Date"  %>

      <%= f.input :end_date, :label => "End Date", :placeholder => "Choose End Date"  %>

    </div>
    <br>
    <div class="form-actions text-center">
      <%= f.button :submit, :class => 'btn btn-primary', value: 'Book Now'  %>
    </div>

<% end %>
