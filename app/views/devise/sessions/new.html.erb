<div class="container">
<h2>Log in</h2>

<div class="login form">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, error: 'Email is mandatory, please specify one' %>
    <%= f.input :password, required: false, error: 'Email is mandatory, please specify one' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-success" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
</div>
